<resources>
    <!-- Base application theme. -->
    <style name="Theme.RDVManager" parent="Theme.MaterialComponents.DayNight.NoActionBar"/>
    <!--******************************************************-->
    <!--               Commun à plusieurs pages              -->
    <!--******************************************************-->

    <!--Boutons-->
    <style name="ButtonStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">10sp</item>
        <item name="android:backgroundTint">@color/yellow</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">@dimen/little_margin</item>
        <item name="android:layout_marginBottom">@dimen/little_margin</item>
    </style>

    <!-- Titre de la page -->
    <style name="TitleStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginTop">@dimen/default_margin</item>
        <item name="android:layout_marginStart">@dimen/default_margin</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- icone de fleche droite -->
    <style name="ArrowTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/ic_arrow_right</item>"
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:tint">@color/white</item>
    </style>

    <!--******************************************************-->
    <!--                 Page mes rendez-vous                 -->
    <!--******************************************************-->

    <!-- Titre du rendez-vous -->
    <style name="AppointmentTitle">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:background">@drawable/rounded_top_corners</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">12sp</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:paddingBottom">3dp</item>
    </style>

    <!-- Infos du rendez-vous -->
    <style name="AppointmentContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginRight">@dimen/default_margin</item>
        <item name="android:textSize">12sp</item>
    </style>

    <!-- icons -->
    <style name="IconTheme">
        <item name="android:layout_width">@dimen/icon_size</item>
        <item name="android:layout_height">@dimen/icon_size</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginRight">@dimen/little_margin</item>
        <item name="android:tint">@color/white</item>
    </style>
    <!--******************************************************-->
    <!--      Page de création/modification de rendez-vous    -->
    <!--******************************************************-->

    <!-- section clickable-->
    <style name="RelativeLayoutTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <!-- Titre de section (Titre,Date,Heure,Adresse etc) -->
    <style name="SectionTitleStyle">
        <item name="android:textColor">@color/yellow</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">@dimen/default_margin</item>
        <item name="android:drawableTint">@color/yellow</item>
    </style>

    <!-- Texte remplit par l'utilisateur -->
    <style name="SectionFilledStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">13sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/default_margin</item>
        <item name="android:layout_marginTop">@dimen/little_margin</item>
    </style>

    <!-- ligne qui sépare les séctions -->
    <style name="BarTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginTop">@dimen/default_margin</item>
        <item name="android:layout_marginBottom">@dimen/default_margin</item>
        <item name="android:background">@color/white</item>
    </style>

    <!--******************************************************-->
    <!--                   Boîtes de dialogues                -->
    <!--******************************************************-->

    <!-- Commun à toute les boîtes de dialogue -->
    <style name="MyTheme">
        <item name="android:textColorSecondary">@color/yellow</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorPrimaryInverse">@color/black</item>
        <item name="android:textColorSecondaryInverse">@color/grey_blue</item>
        <item name="colorAccent">@color/yellow</item>
    </style>

    <!-- Jsais pu -->
    <style name="MyDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:theme">@style/MyTheme</item>
        <item name="android:windowBackground">@color/black</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/DialogButtonTheme</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/DialogButtonTheme</item>
        <item name="android:timePickerStyle">@style/TimePickerTheme</item> <!-- Pour TimePicker -->
    </style>

    <!--Mode par default du timePicker -->
    <style name="TimePickerTheme" parent="Theme.AppCompat.Light">
        <item name="android:timePickerMode">spinner</item>
    </style>

    <!--Boutons ok et cancel des boîtes de dialogue-->
    <style name="DialogButtonTheme" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/white</item>
    </style>

    <!--EditText des AlertDialog -->
    <style name="EditTextTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/rounded_empty_border</item>
        <item name="android:paddingRight">@dimen/little_margin</item>
        <item name="android:paddingLeft">@dimen/little_margin</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>