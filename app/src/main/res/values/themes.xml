<resources>
    <!--******************************************************-->
    <!--                   Application theme                  -->
    <!--******************************************************-->

    <style name="MyTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- ActionBar/NavigationBar/StatusBar-->
        <item name="actionBarStyle">@style/AppTheme.ActionBar</item>

        <!-- spinner -->
        <item name="colorControlActivated">@color/yellow</item>
        <item name="android:colorForeground">@color/white</item>

        <!-- Buttons -->
        <item name="android:buttonStyle">@style/ButtonStyle</item>

        <!-- Dialogs -->
        <item name="android:alertDialogTheme">@style/DialogStyle</item>
        <item name="android:datePickerDialogTheme">@style/DialogStyle</item>
        <item name="android:timePickerDialogTheme">@style/DialogStyle</item>

        <!-- RadioButtons -->
        <item name="android:radioButtonStyle">@style/RadioButtonStyle</item>
    </style>

    <!--******************************************************-->
    <!--               Application theme elements             -->
    <!--******************************************************-->

    <!-- ActionBar/NavigationBar/StatusBar -->
    <style name="AppTheme.ActionBar" parent="Widget.AppCompat.Light.ActionBar">
        <item name="background">@color/yellow</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:statusBarColor">@android:color/black</item>
        <item name="android:navigationBarColor">@android:color/black</item>
        <item name="titleTextStyle">@style/AppTheme.ActionBar.TitleText</item>
    </style>

    <!-- ActionBar title -->
    <style name="AppTheme.ActionBar.TitleText" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/black</item>
    </style>

    <!--Buttons-->
    <style name="ButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:backgroundTint">@color/yellow</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">10sp</item>
    </style>

    <!--  All dialogs -->
    <style name="DialogStyle" parent="Theme.AppCompat.Light.Dialog">
        <!-- primary/secondary colors -->
        <item name="android:colorPrimary">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/yellow</item>
        <item name="android:textColorPrimaryInverse">@color/black</item>
        <item name="android:textColorSecondaryInverse">@color/grey_blue</item>
        <item name="colorAccent">@color/yellow</item>

        <item name="android:buttonBarPositiveButtonStyle">@style/DialogButtonStyle</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/DialogButtonStyle</item>
        <item name="android:windowBackground">@drawable/rounded_corners_black</item>
        <item name="android:textColorAlertDialogListItem">@color/white</item>
        <item name="android:windowTitleStyle">@style/DialogTitleStyle</item>
        <!-- TimePicker-->
        <item name="android:timePickerStyle">@style/TimePickerStyle</item>
    </style>

    <!--TimePicker mode -->
    <style name="TimePickerStyle" parent="Theme.AppCompat.Light">
        <item name="android:timePickerMode">spinner</item>
    </style>

    <!--  Dialog title-->
    <style name="DialogTitleStyle" parent="android:TextAppearance.Material.DialogWindowTitle">
        <item name="android:textColor">@color/yellow</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--OK / CANCEL of dialogs-->
    <style name="DialogButtonStyle" parent="Widget.AppCompat.ButtonBar">
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- RadioButtons-->
    <style name="RadioButtonStyle" parent="@android:style/Widget.CompoundButton.RadioButton">
        <item name="android:textColor">@color/white</item>
    </style>

    <!--******************************************************-->
    <!--                    MyAppointments                    -->
    <!--******************************************************-->

    <!-- Appointment content -->
    <style name="AppointmentContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginRight">@dimen/default_margin</item>
        <item name="android:textSize">12sp</item>
    </style>

    <!-- icons -->
    <style name="IconTheme">
        <item name="android:layout_width">@dimen/icon_size</item>
        <item name="android:layout_height">@dimen/icon_size</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginRight">@dimen/little_margin</item>
        <item name="android:tint">@color/white</item>
    </style>

    <!--******************************************************-->
    <!--                    SetAppointment                    -->
    <!--******************************************************-->

    <!-- Section style -->
    <style name="SectionStyle">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:padding">@dimen/default_margin</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/round_corners_ripple</item>
    </style>

    <!-- Section title style -->
    <style name="SectionTitleStyle">
        <item name="android:textColor">@color/yellow</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawableTint">@color/yellow</item>
        <item name="android:drawablePadding">@dimen/little_margin</item>
    </style>

    <!-- Filled section style -->
    <style name="SectionFilledStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">13sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/little_margin</item>
        <item name="android:layout_marginStart">@dimen/default_margin</item>
        <item name="android:layout_marginEnd">@dimen/default_margin</item>
        <item name="android:paddingRight">@dimen/little_margin</item>
    </style>

    <!-- Right arrow -->
    <style name="ArrowStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/ic_arrow_right</item>"
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:tint">@color/white</item>
    </style>

    <!-- Horizontal Bar -->
    <style name="HorizontalBarTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginLeft">@dimen/default_margin</item>
        <item name="android:layout_marginRight">@dimen/default_margin</item>
        <item name="android:background">@color/white</item>
    </style>

    <!--******************************************************-->
    <!--                      Preferences                     -->
    <!--******************************************************-->

    <!-- Vertical Bar -->
    <style name="VerticalBarTheme">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginTop">@dimen/little_margin</item>
        <item name="android:layout_marginBottom">@dimen/little_margin</item>
        <item name="android:background">@color/white</item>
    </style>

    <!-- PreferenceBackground -->
    <style name="PreferenceBackgroundStyle">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:paddingEnd">@dimen/default_margin</item>
        <item name="android:paddingStart">@dimen/default_margin</item>
        <item name="android:paddingTop">@dimen/little_margin</item>
        <item name="android:paddingBottom">@dimen/little_margin</item>
        <item name="android:layout_margin">@dimen/little_margin</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/round_corners_ripple</item>
    </style>

</resources>