<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RDVManager" parent="Theme.MaterialComponents.DayNight.NoActionBar"/>

    <style name="MyTheme">
        <item name="android:textColorSecondary">@color/yellow</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorPrimaryInverse">@color/black</item>
        <item name="android:textColorSecondaryInverse">@color/grey_blue</item>
        <item name="colorAccent">@color/yellow</item>
    </style>

    <!--******************************************************-->
    <!--               Commun à toutes les pages              -->
    <!--******************************************************-->

    <!--Boutons-->
    <style name="ButtonStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">10sp</item>
        <item name="android:backgroundTint">@color/yellow</item>
    </style>

    <!-- Titre de la page -->
    <style name="TitleStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!--******************************************************-->
    <!--      Page de création/modification de rendez-vous    -->
    <!--******************************************************-->

    <!-- Titre de section (Titre,Date,Heure,Adresse etc) -->
    <style name="SectionTitleStyle">
        <item name="android:textColor">@color/yellow</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- Texte remplit par l'utilisateur -->
    <style name="SectionFilledStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">13sp</item>
    </style>

    <!-- Pour les boîtes de dialogue-->
    <style name="MyDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:theme">@style/MyTheme</item>
        <item name="android:windowBackground">@color/black</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/DialogButtonTheme</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/DialogButtonTheme</item>
        <item name="android:timePickerStyle">@style/TimePickerTheme</item> <!-- Pour TimePicker -->
    </style>

    <!--Mode par default du timePicker -->
    <style name="TimePickerTheme" parent="Theme.AppCompat.Light">
        <item name="android:timePickerMode">spinner</item>
    </style>

    <!--Boutons des boîtes de dialogue-->
    <style name="DialogButtonTheme" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/white</item>
    </style>

</resources>